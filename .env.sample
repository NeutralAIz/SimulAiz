# Rename to .env before running docker compose commands.
APP_ENV=development
SIMULAIZ_LOG_LEVEL=INFO
SIMULAIZ_HOST=0.0.0.0
SIMULAIZ_PORT=8000

# LiveKit configuration
LIVEKIT_URL=wss://livekit.test.neutralaiz.com
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# Agent defaults
AGENT_ENABLE=true
AGENT_IDENTITY=simulaiz-agent
AGENT_NAME=SimulAiz Agent
AGENT_ROOM=simulaiz-demo

# GPU runtime hints (Compose/Swarm may also need explicit GPU flags)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Voice & Model controls (consumed by your agent pipeline if enabled)
TTS_PROVIDER=elevenlabs
TTS_VOICE=
STT_PROVIDER=whisper
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-realtime
PRECISION=fp16

# Offline models
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE=float16
WHISPER_LANG=en
XTTS_DIR=/models/xtts
XTTS_REF_WAV=
TTS_DEVICE=cuda

# Avatar
AVATAR_MODE=liveportrait   # liveportrait|reactive
AVATAR_IMAGE=/app/assets/avatar.png
AVATAR_FPS=30
AVATAR_WIDTH=1280
AVATAR_HEIGHT=720

# Wav2Lip (optional ultra-real lipsync)
W2L_WEIGHTS=/models/wav2lip/wav2lip_gan.pth
W2L_AUTODOWNLOAD=false
W2L_WEIGHTS_URL=
